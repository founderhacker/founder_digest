<%= render partial: "shared/heading", locals: { title: @stakeholder_update.title, tagline: 'Review and confirm your update below.' } %>

<div class="max-w-3xl mx-auto">
  <div class="border p-4 border-dashed border-2">
    <%= @stakeholder_update.content %>
  </div>

  <%= form_for @stakeholder_update do |f| %>
    <%= f.text_field :confirmed_at, type: 'hidden', value: DateTime.now %>

    <div class="flex">
      <div class="mt-8">
        <!-- <button type="submit" class="inline-flex justify-center rounded-md border border-transparent bg-brand-orange hover:bg-brand-orange-dark py-2 px-4 text-sm font-medium text-white shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Confirm and Share</button> -->
        <%= link_to 'Edit', edit_stakeholder_update_path(id: @stakeholder_update.id), class: 'inline-flex justify-center rounded-md border border-transparent bg-brand-blue hover:bg-brand-blue-dark py-2 px-4 text-sm font-medium text-white shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2' %>
      </div>
      <div class="mt-8 text-right flex-1">
        <button type="submit" class="inline-flex justify-center rounded-md border border-transparent bg-brand-orange hover:bg-brand-orange-dark py-2 px-4 text-sm font-medium text-white shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Confirm and Share</button>
      </div>
    </div>

  <% end %>
</div>
