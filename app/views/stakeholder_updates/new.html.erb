<%= render partial: "shared/heading", locals: { title: 'Write an Update', tagline: 'Share the latest news from your company.' } %>

<div class="max-w-3xl mx-auto">
  <%= form_for @stakeholder_update do |form| %>
    <div class="field">
      <%= form.rich_text_area :content %>
    </div>

    <div class="mt-2 text-right">
      <button type="submit" class="w-full inline-flex justify-center rounded-md border border-transparent bg-brand-orange hover:bg-brand-orange-dark py-2 px-4 text-sm font-medium text-white shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Share</button>
    </div>
  <% end %>
</div>
