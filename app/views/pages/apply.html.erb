<%= render partial: "shared/heading", locals: { title: 'Apply to Founder Digest', tagline: 'Each submission is manually reviewed by our team within 24 hours.' } %>

<% plan_name = params[:plan] || 'free' %>

<div class="max-w-sm mx-auto">

  <%= form_for UserSubmission.new do |form| %>
      <div class="space-y-8">
        <input type="hidden" id="user_submission_plan_name" name="user_submission[plan_name]" value="<%= plan_name %>">

        <div class="">
          <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
            <div class="sm:col-span-3">
              <label for="first_name" class="block text-sm font-medium text-gray-700">First name</label>
              <div class="mt-1">
                <%= form.text_field :first_name, required: true, placeholder: 'Ryan', class: 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <label for="last_name" class="block text-sm font-medium text-gray-700">Last name</label>
              <div class="mt-1">
                <%= form.text_field :last_name, placeholder: 'Kulp', required: true, class: 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
              </div>
            </div>

            <div class="sm:col-span-6">
              <label for="email" class="block text-sm font-medium text-gray-700">Email address</label>
              <div class="mt-1">
                <%= form.text_field :email, type: 'email', required: true, placeholder: 'ryan@fomo.com', class: 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
              </div>
            </div>

            <div class="sm:col-span-6">
              <label for="website" class="block text-sm font-medium text-gray-700">Company Website</label>
              <div class="mt-1">
                <%= form.text_field :website, type: 'url', required: true, placeholder: 'https://fomo.com', class: 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
              </div>
            </div>
          </div>
        </div>

        <div class="">
          <div class="mt-1">
            <fieldset class="mt-6">
              <legend class="contents text-base font-medium text-gray-900">What's your role?</legend>
              <div class="mt-4 space-y-4">
                <div class="flex items-center">
                  <input id="user_submission_job_role_csuite" required name="user_submission[job_role]" value="c-suite" type="radio" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500">
                  <label for="user_submission_job_role_csuite" class="ml-3 block text-sm font-medium text-gray-700">C-Suite</label>
                </div>
                <div class="flex items-center">
                  <input id="user_submission_job_role_founder" required name="user_submission[job_role]" value="founder" type="radio" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500">
                  <label for="user_submission_job_role_founder" class="ml-3 block text-sm font-medium text-gray-700">Founder</label>
                </div>
                <div class="flex items-center">
                  <input id="user_submission_job_role_employee" required name="user_submission[job_role]" value="employee" type="radio" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500">
                  <label for="user_submission_job_role_employee" class="ml-3 block text-sm font-medium text-gray-700">Employee</label>
                </div>
              </div>
            </fieldset>
          </div>
        </div>

        <div class="sm:col-span-6">
          <label for="text" class="block text-sm font-medium text-gray-700">About</label>
          <div class="mt-1">
            <%= form.text_area :text, placeholder: "Stakeholders,&#10;&#10;this month we worked primarily on...".html_safe, rows: 6, class: 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
          </div>
          <p class="mt-2 text-sm text-gray-500">The more detailed, the more likely you'll be accepted.</p>
        </div>
      </div>

      <div class="pt-5">
        <div class="flex justify-end">
          <button type="submit" class="w-full inline-flex justify-center rounded-md border border-transparent bg-brand-blue hover:bg-brand-blue-dark py-2 px-4 text-sm font-medium text-white shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Apply</button>
        </div>
      </div>
  <% end %>
</div>
